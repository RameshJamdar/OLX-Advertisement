spring:
  application:
     name: accounts-service
     
  datasource:
    url: jdbc:mysql://localhost/micro
    username: root
    password: root
  jpa:
    generate-ddl: true

logging:
  level: 
    httpclient.wire: DEBUG 

  
  client:
    serviceUrl:
      defaultZone: http://localhost:5001/eureka

